<h1 class="ui center aligned header">Welcome to RediMessaging - a <em>complete</em> chat app</h1>
<h2 class="ui center aligned medium icon header">
    <i class="circular signup violet icon"></i>
    Sign up
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for @user, html: { class: "ui form", role: "form"}, url: signup_path do |f| %>
        <div class="field <%= @user.errors.include?(:username) ? "error" : "" %>">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
          <% if @user.errors.include?(:username) %>
            <small class="input-error-message">
                <%= @user.errors[:username].first %>
            </small>
          <% end %>
        </div>
        <div class="field <%= @user.errors.include?(:password) ? "error" : "" %>">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
          <% if @user.errors.include?(:password) %>
            <small class="input-error-message">
                <%= @user.errors[:password].first %>
            </small>
          <% end %>

        </div>
        <%= f.button "Signup", class: "ui violet submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">    
        <%= link_to "<i class='power icon'></i>Login".html_safe, login_path, class: "ui big button violet transparent" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>  